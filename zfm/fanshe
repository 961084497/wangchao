import sys

class New(object):

    def ww(self):
        print("ok")
        return "返回值"

    def www(self):
        print("www")
        return "www返回值"


if __name__ == '__main__':
    bb = New()
    func = getattr(bb,sys.argv[1])
    res = func()
    print(res)

[root@test-app2 ~]# /usr/bin//python fanshe.py ww
