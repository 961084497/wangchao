#!/usr/bin/python


def www():
	a = 6
	print(a)


def wwww():
    print("wwww")

import rr   #####  这个是此脚本模块名

if __name__ == '__main__':
    import sys
    res1 = sys.argv[1]
    res = getattr(rr,res1)
    res()



