#		else:
#			print("ucloud云平台云主机机器 %s---------处于关闭状态----------------------------------error" %(ii.get("IPSet")[0].get("IP")))
		#print  ii.get('InstanceName'), ii.get('PrivateIpAddresses')[0]

print("ucloud云平台云主机总数量为- --------------------------------------------------------------------------------%s 台---------------------------------------------------------------------------------------" %len(sum(total,[])))
