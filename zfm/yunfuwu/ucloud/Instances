data={
      'Region': Region,
      'Offset' : 0,
      'Limit': 100,

}
num = public(**data)
a = num.get('UHostSet')
total = []

while True:
	num = public(**data)
	a = num.get('UHostSet')
	if a:
		total.append(a)
		data['Offset'] += 100
	else:
		break
#print(len(total))
for i in total:
	for ii in i:
		if ii['State'] == "Running":
			#print(ii)
